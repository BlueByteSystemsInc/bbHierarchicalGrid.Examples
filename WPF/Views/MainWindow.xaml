<Window x:Class="WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        SnapsToDevicePixels="True"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:bb="http://schemas.bluebyte.biz/bbHierarchicalGrid"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="Mini Explorer" WindowStyle="SingleBorderWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <bb:bbHierarchicalDataGrid Name="bbGrid"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1"  Margin="10" HorizontalAlignment="Right" Content="Browse to folder..." Command="{Binding AddFolderCommand}"/>
            <TextBox Margin="10" Grid.Column="0" IsReadOnly="True" HorizontalAlignment="Stretch" Text="{Binding CurrentDirectory}"/>
        </Grid>
    </Grid>
</Window>
